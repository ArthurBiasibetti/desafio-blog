{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "ignore",
  "controllerPathGlobs": ["src/useCases/**/*Controller.ts"],
  "spec": {
    "securityDefinitions": {
      "auth": {
        "type": "http",
        "scheme": "Bearer",
        "bearerFormat": "JWT",
        "scopes": {
          "ADMIN": "ADMIN",
          "USER": "USER"
        }
      }
    },
    "basePath": "/api",
    "outputDirectory": "./src",
    "specVersion": 3,
    "host": "localhost:3001",
    "schemes": ["http", "https"]
  },
  "routes": {
    "basePath": "/api",
    "routesDir": "src/routes",
    "iocModule": "src/services/iocModule.ts",
    "authenticationModule": "src/middlewares/tsoaAuthentication.ts"
  }
}
